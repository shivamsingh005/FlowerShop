@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="display-4 text-center">Welcome</h1>
    <div class="text-end">
        <a class="btn btn-primary" href="Flower/Create">Add Flower</a>
    </div>
    @if (Model != null)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Flower Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.FlowerName</td>
                        <td>@item.Price</td>
                        <td><a class="editFlower text-primary" data-id="@item.Id">Edit</a> | <a class="delFlower text-danger" data-id="@item.Id">Del</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts{
    <script src="~/js/flower/flower.js"></script>
}
