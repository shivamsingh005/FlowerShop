@{
    ViewData["Title"] = "Home Page";
}

<form>
    <div class="container px-5 pt-5">
        <h3 class="text-center">Add Flower</h3>
        <div class="col">
            <label>Flower Name</label>
            <input type="text" id="flowerName" class="form-control form-control-sm" placeholder="Flower Name">
        </div>
        <div class="col mt-2">
            <label>Flower Price</label>
            <input type="text" id="flowerPrice" class="form-control form-control-sm" placeholder="Price">
        </div>
        <div class="mt-3 text-center">
            <button class="btn btn-primary" id="saveFlower">Save Flower</button>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/flower/flower.js"></script>
}